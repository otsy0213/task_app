<h2>予定を新規で作成します。</h2>

<%= form_for @task do |f| %>
<table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    
    <tr>
      <th><%= f.label :start ,"開始日時" %></th>
      <td>
        <%= f.datetime_field :start %>
      </td>
    </tr>
    
    <tr>
      <th><%= f.label :end ,"終了日時" %></th>
      <td>
        <%= f.datetime_field :end %>
      </td>
    </tr>
    
    <tr>
      <th><%= f.label :remarks ,"備考" %></th>
      <td><%= f.text_area :remarks %></td>
    </tr>
    
</table>

<div>
    <ul>
      <li><%= f.submit "登録" %></li>
      <li><%= link_to "一覧に戻る", :tasks %></li>
    </ul>
</div>
<% end %>