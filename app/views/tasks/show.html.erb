<h3>予定詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <th>開始日時</th>
        <td><%= @task.start %></td>
      </tr>
      <tr>
        <th>終了日時</th>
        <td><%= @task.end %></td>
      </tr>
      <tr>
        <th>備考</th>
        <td><%= @task.remarks %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "一覧に戻る", :tasks %></li>
      </ul>
    </div>