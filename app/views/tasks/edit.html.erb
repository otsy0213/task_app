<h3>予定編集</h3>
 
    <%= form_for @task do |f| %>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th><%= f.label :start ,"開始日時" %></th>
          <td><%= f.text_field :start %></td>
        </tr>
        <tr>
          <th><%= f.label :end ,"終了日時" %></th>
          <td><%= f.text_field :end %></td>
        </tr>
        <tr>
          <th><%= f.label :remarks ,"備考" %></th>
          <td><%= f.text_area :remarks %></td>
        </tr>
      </table>
      <div>
        <ul>
          <li><%= f.submit "編集を完了する" %></li>
          <li><%= link_to "一覧に戻る", :tasks %></li>
        </ul>
      </div>
    <% end %>